<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxModerno" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{StaticResource azul1}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border
                        Width="{TemplateBinding Property=Width}"
                        Height="35"
                        Background="{Binding Background, RelativeSource={RelativeSource templatedParent}}"
                        CornerRadius="10">
                        <Grid>
                            <Rectangle StrokeThickness="1" />
                            <TextBox
                                x:Name="SearchBox"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Margin="1"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" />

                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Width" Value="160" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="White" />
                <Setter Property="Foreground" Value="#1C3A4A" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="{StaticResource amarillo2}" />
                <Setter Property="Foreground" Value="#1C3A4A" />
            </Trigger>
        </Style.Triggers>

    </Style>


</ResourceDictionary>